<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/searchFragment">

    <fragment
        android:id="@+id/libraryFragment"
        android:name="com.example.yellow.ui.library.LibraryFragment"
        android:label="Library">
        <action
            android:id="@+id/action_libraryFragment_to_pianoFragment"
            app:destination="@id/pianoFragment" />
    </fragment>

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.yellow.ui.search.SearchFragment"
        android:label="Search">
        <action
            android:id="@+id/action_searchFragment_to_pianoFragment"
            app:destination="@id/pianoFragment" />
    </fragment>

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.yellow.ui.settings.SettingsFragment"
        android:label="Settings" />

    <fragment
        android:id="@+id/pianoFragment"
        android:name="com.example.yellow.PianoFragment"
        android:label="Practice">
        <argument android:name="title" app:argType="string" />
        <argument android:name="melodyUrl" app:argType="string" />
        <argument android:name="midiUrl" app:argType="string" />
        <argument android:name="queryTitle" app:argType="string" />
    </fragment>

</navigation>
