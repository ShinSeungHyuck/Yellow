<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Yellow" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- 브랜드 색상 -->
        <item name="colorPrimary">@color/accent_purple</item>
        <item name="colorPrimaryVariant">@color/accent_purple_dark</item>
        <item name="colorOnPrimary">@color/text_primary</item>
        <item name="colorSecondary">@color/accent_purple_light</item>
        <item name="colorSecondaryVariant">@color/accent_purple_dark</item>
        <item name="colorOnSecondary">@color/text_primary</item>
        <!-- 서피스/배경 -->
        <item name="colorSurface">@color/surface_card</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="android:colorBackground">@color/bg_top</item>
        <item name="colorOnBackground">@color/text_primary</item>
        <!-- 상태바/네비게이션바 -->
        <item name="android:statusBarColor">@color/bg_top</item>
        <item name="android:navigationBarColor">@color/surface_card</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
    </style>
</resources>